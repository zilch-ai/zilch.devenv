# Auto detect text files and perform normalization
* text=auto

# Documents
*.txt text eol=lf
*.md text eol=lf
*.pdf binary

# Shell Scripts
*.sh text eol=lf
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Configuration Files
*.json text eol=lf
*.xml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.config text eol=lf
*.toml text eol=lf

# Source Code
*.h text eol=lf
*.c text eol=lf
*.hpp text eol=lf
*.cpp text eol=lf
*.rs text eol=lf
*.go text eol=lf
*.cs text eol=lf
*.py text eol=lf

# 
Dockerfile text eol=lf

# Web Development
*.htm text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.vue text eol=lf

# Image
*.ico binary
*.svg binary
*.jpg binary filter=lfs diff=lfs merge=lfs -text
*.png binary filter=lfs diff=lfs merge=lfs -text
*.webp binary filter=lfs diff=lfs merge=lfs -text
*.gif binary filter=lfs diff=lfs merge=lfs -text

