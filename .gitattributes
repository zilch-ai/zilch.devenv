*.m4a binary filter=lfs diff=lfs merge=lfs -text
*.mid binary filter=lfs diff=lfs merge=lfs -text
*.midi binary filter=lfs diff=lfs merge=lfs -text

# Video
*.mp4 binary filter=lfs diff=lfs merge=lfs -text
*.mkv binary filter=lfs diff=lfs merge=lfs -text
*.mov binary filter=lfs diff=lfs merge=lfs -text
*.flv binary filter=lfs diff=lfs merge=lfs -text
*.avi binary filter=lfs diff=lfs merge=lfs -text
*.wmv binary filter=lfs diff=lfs merge=lfs -text
*.3gp binary filter=lfs diff=lfs merge=lfs -text
*.asf binary filter=lfs diff=lfs merge=lfs -text
